<Application x:Class="WpfAppPaper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfAppPaper"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Gabriola"/>
            <Setter Property="FontStretch" Value="Medium"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Tw Cen MT"/>
            <Setter Property="FontStretch" Value="Medium"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="#cefff9"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Gabriola"/>
            <Setter Property="FontStretch" Value="Medium"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="#cefff9"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Gabriola"/>
            <Setter Property="FontStretch" Value="Medium"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="#00cc76"/>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="1"/>
        </Style>
    </Application.Resources>
</Application>
